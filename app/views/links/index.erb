<h1>Welcome <%= @name %>!</h1>

<h2>Links</h2>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL: <%= link.url   %>
      Tags: <%= link.tags.map{ |tag| "<a href='/tags/#{tag.name}'>#{tag.name}</a>" }.join(" ") %>
    </li>
  <% end %>
</ul>

<a href="/links/new">Add a link</a>
